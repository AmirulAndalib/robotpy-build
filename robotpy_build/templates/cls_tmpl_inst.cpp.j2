namespace rpygen {

using BindType = rpygen::bind_{{ tmpl_data.full_cpp_name_identifier }}<{{ tmpl_data.params | join(', ') }}>;
static std::unique_ptr<BindType> inst;

bind_{{ tmpl_data.full_cpp_name_identifier }}_{{ tmpl_index }}::bind_{{ tmpl_data.full_cpp_name_identifier }}_{{ tmpl_index }}(py::module &m, const char * clsName)
{
    inst = std::make_unique<BindType>(m, clsName);
}

void bind_{{ tmpl_data.full_cpp_name_identifier }}_{{ tmpl_index }}::finish(const char *set_doc, const char *add_doc)
{
    inst->finish(set_doc, add_doc);
    inst.reset();
}

}; // namespace rpygen

